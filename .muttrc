source 'gpg2 -dq ~/dotfiles/.mutt-passwd.gpg |'
source ~/dotfiles/.mutt-gpg
set imap_user	= sulamiification@gmail.com
set folder	    = imaps://imap.gmail.com/
set spoolfile	= +INBOX
mailboxes	    = +INBOX
set mail_check	= 300
unset record
set smtp_url	= smtp://sulamiification:$my_pw_gmail@smtp.gmail.com:587/
set ssl_force_tls   = yes
set from	    = sulamiification@gmail.com
set realname	= "Rob Schroer"
set ssl_starttls= yes
set editor	    = vim
set imap_pass	= $my_pw_gmail
set send_charset= "utf-8"

color normal white default
color message white default
color hdrdefault cyan default
color attachment yellow default
color index cyan default "~N"
color index cyan default "~O"
color index magenta default "~D"

# Gmail tweaks
set postponed="imaps://imap.gmail.com/[Google Mail]/Entwürfe"
bind editor <space> noop
macro index,pager y "<save-message>=[Google Mail]/Alle Nachrichten<enter><enter>" "Archive"
macro index,pager d "<save-message>=[Google Mail]/Papierkorb<enter><enter>" "Trash"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Google Mail]/Alle Nachrichten<enter>" "Go to all mail"
macro index gs "<change-folder>=[Google Mail]/Markiert<enter>" "Go to starred messages"
macro index gd "<change-folder>=[Google Mail]/Entwürfe<enter>" "Go to drafts"
