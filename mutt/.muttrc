source $HOME/dotfiles/mutt/mutt-gpg

set realname        = "Robin Schroer"
set mail_check      = 300
unset record
set ssl_force_tls   = yes
set ssl_starttls    = yes
set editor          = vim
set send_charset    = "utf-8"
set sort            = threads
set sort_aux        = date-sent
set signature       = "$HOME/dotfiles/mutt/.signature"

source $HOME/dotfiles/mutt/colors.muttrc
# color normal white default
# color message white default
# color hdrdefault cyan default
# color attachment yellow default
# color index cyan default "~N"
# color index cyan default "~O"
# color index red default "~D"
# color indicator default black

# Hotkeys
bind editor <space> noop
bind index R group-reply
macro index,pager <f2> "<sync-mailbox><enter-command>source 'gpg2 -dq $HOME/dotfiles/mutt/mutt-gmail.gpg |'<enter><change-folder>!<enter>"
macro index,pager <f3> "<sync-mailbox><enter-command>source 'gpg2 -dq $HOME/dotfiles/mutt/mutt-pawnmail.gpg'<enter><change-folder>imaps://mail.pawnmail.com/<enter>"
macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'

source 'gpg2 -dq $HOME/dotfiles/mutt/mutt-gmail.gpg |'
folder-hook $folder "source 'gpg2 -dq $HOME/dotfiles/mutt/mutt-gmail.gpg |'"

source 'gpg2 -dq $HOME/dotfiles/mutt/mutt-pawnmail.gpg |'
folder-hook pawnmail "source 'gpg2 -dq $HOME/dotfiles/mutt/mutt-pawnmail.gpg |'"

