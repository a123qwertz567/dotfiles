#sxhkd config
#listen for key events by keysym
#
#sulamis audio control
#
XF86Audio{Mute,LowerVolume,RaiseVolume}
   ~/sxhkd/actions/pulseaudio-ctl.sh {mute,down,up}

#mute and unmute volume with the mute button on the keyboard
#XF86AudioMute
#   bash ~/sxhkd/actions/volmute.sh
#
#rotate screen output and stylus input with the special rotate-button on the tabletframe
XF86RotateWindows
   bash ~/sxhkd/actions/rotation.sh
#
#increase volume by with special volume-up button
#XF86AudioRaiseVolume
#   bash ~/sxhkd/actions/volup.sh
#
#lower volume by special volume-down button
#XF86AudioLowerVolume
#   bash ~/sxhkd/actions/voldw.sh
#
#increase brightness by special brightness-up button
XF86MonBrightnessUp
   bash ~/sxhkd/actions/brightup.sh
#
#decrease brighthness by special brightness-down button
XF86MonBrightnessDown
   bash ~/sxhkd/actions/brightdw.sh
#
#mute and unmute mic by software
XF86AudioMicMute
   bash ~/sxhkd/actions/micctrl.sh
#
#toogle brightness in tablet mode with second button next to rotate button
XF86TaskPane
   bash ~/sxhkd/actions/brighttoogle.sh
#
#toggle trackball
XF86TouchpadToggle
   bash ~/sxhkd/actions/trackballtoogle.sh
#
#make a instant webcam shot
XF86WebCam
   bash ~/sxhkd/actions/webcamcrtl.sh
#
#lock screen instant
XF86ScreenSaver
   bash ~/sxhkd/actions/screenlock.sh
#
#lock screen when sleep is activated
#XF86Sleep
#   bash ~/sxhkd/actions/screenlock.sh
#
#open powertop batterytool
XF86Battery
  ~/sxhkd/actions/powertop.sh
#
#show cpu temp in a terminal
XF86Display
   xfce4-terminal -e "sxhkd/actions/tempmonitor.sh" -T "CPU-Temp" --geometry=25x5 --hide-menubar --hide-toolbar
#
#disable touchscreen
XF86Launch1
      bash ~/sxhkd/actions/touchscreentoogle.sh
